{
  "name": "ini-theme",
  "displayName": "%extension.displayName%",
  "publisher": "startupintell",
  "description": "%extension.description%",
  "icon": "icon.png",
  "version": "1.6.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/startupintell/ini-theme.git"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "build": "npm run build:json && npm run build:extension",
    "build:json": "jiti src/build.ts",
    "build:extension": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --platform=node --format=cjs",
    "watch": "npm run build:extension -- --watch",
    "publish": "npm run build && npm run publish:vsce && npm run publish:ovsx",
    "publish:vsce": "npx dotenv-cli -- npx @vscode/vsce publish",
    "publish:ovsx": "npx dotenv-cli -- npx ovsx publish"
  },
  "author": {
    "name": "Wang Hao",
    "email": "wanghao@ini.so",
    "url": "https://ini.so"
  },
  "categories": [
    "Themes",
    "Programming Languages"
  ],
  "keywords": [
    "theme",
    "dark",
    "light",
    "high contrast",
    "clean",
    "nuxt",
    "vue",
    "tailwind",
    "ini"
  ],
  "contributes": {
    "themes": [
      {
        "label": "ini Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/dark.json"
      },
      {
        "label": "ini Light",
        "uiTheme": "vs",
        "path": "./themes/light.json"
      }
    ],
    "configuration": {
      "title": "ini Theme",
      "properties": {
        "iniTheme.italicComments": {
          "type": "boolean",
          "default": true,
          "description": "%config.italicComments%"
        },
        "iniTheme.italicKeywords": {
          "type": "boolean",
          "default": false,
          "description": "%config.italicKeywords%"
        },
        "iniTheme.boldKeywords": {
          "type": "boolean",
          "default": false,
          "description": "%config.boldKeywords%"
        },
        "iniTheme.neutralScale": {
          "type": "string",
          "enum": [
            "slate",
            "gray",
            "zinc",
            "neutral",
            "stone"
          ],
          "default": "neutral",
          "description": "%config.neutralScale%"
        },
        "iniTheme.primaryScale": {
          "type": "string",
          "enum": [
            "black",
            "blue",
            "indigo",
            "violet",
            "pink",
            "rose",
            "red",
            "orange",
            "amber",
            "yellow",
            "lime",
            "green",
            "emerald",
            "teal",
            "cyan",
            "sky"
          ],
          "default": "black",
          "description": "%config.primaryScale%"
        }
      }
    },
    "markdown.previewStyles": [
      "./styles/markdown.css"
    ],
    "commands": [
      {
        "command": "iniTheme.regenerate",
        "title": "%command.regenerate%"
      },
      {
        "command": "iniTheme.setDark",
        "title": "%command.setDark%"
      },
      {
        "command": "iniTheme.setLight",
        "title": "%command.setLight%"
      },
      {
        "command": "iniTheme.setPrimaryScale",
        "title": "%command.setPrimaryScale%"
      },
      {
        "command": "iniTheme.setNeutralScale",
        "title": "%command.setNeutralScale%"
      }
    ]
  },
  "license": "CC-BY-NC-SA-4.0",
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.27.2",
    "jiti": "^2.6.1",
    "typescript": "^5.9.2"
  }
}
